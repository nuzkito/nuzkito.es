---
layout: layout
eleventyExcludeFromCollections: true
---
{% set latestPosts = collections.all | reverse %}
<main class="content" role="main">
    <section class="Latest-posts">
        <h1 class="Latest-posts--title">Lo Ãºltimo que he publicado</h1>
        {%- for post in latestPosts.slice(0, 10) -%}
            <ul class="Latest-posts--list">
                <li class="Latest-posts--item">
                    <a href="{{ post.page.url }}">{{ post.data.title }}</a>
                    <br>
                    {%- if post.data.date_published.toDateString() === post.data.date_updated.toDateString() %}
                        <time class="Latest-posts--date" datetime="{{ post.data.date_published.toISOString() }}">
                            {{ post.data.date_published.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' }) }}
                        </time>
                    {%- else %}
                        <time class="Latest-posts--date" datetime="{{ post.data.date_updated.toISOString() }}">
                            Actualizado el {{ post.data.date_updated.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' }) }}
                        </time>
                    {%- endif %}
                </li>
            </ul>
        {%- endfor -%}
    </section>
</main>
